<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/matchInputButton"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Match Input"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dataReview_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Data Review"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchInputButton" />

    <Button
        android:id="@+id/pitScouting_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Pit Scouting"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/dataReview_btn"
        app:layout_constraintTop_toBottomOf="@+id/toAdmin_btn" />

    <Button
        android:id="@+id/toAdmin_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:text="Admin"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/matchInputButton"
        app:layout_constraintTop_toTopOf="@+id/matchInputButton" />

</androidx.constraintlayout.widget.ConstraintLayout>