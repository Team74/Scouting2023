<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeleOpInput">

    <CheckBox
        android:id="@+id/Balance_update_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        app:layout_constraintStart_toStartOf="@+id/cubeInput_update_et"
        app:layout_constraintTop_toBottomOf="@+id/cubeInput_update_et" />

    <CheckBox
        android:id="@+id/low_cube_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Low"
        app:layout_constraintStart_toEndOf="@+id/mid_cube_cb"
        app:layout_constraintTop_toTopOf="@+id/mid_cube_cb" />

    <EditText
        android:id="@+id/cubeInput_update_et"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Cubes"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/coneInput_et"
        app:layout_constraintTop_toBottomOf="@+id/coneInput_et" />

    <CheckBox
        android:id="@+id/mid_cone_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Mid"
        app:layout_constraintStart_toEndOf="@+id/high_cone_cb"
        app:layout_constraintTop_toTopOf="@+id/high_cone_cb" />

    <CheckBox
        android:id="@+id/low_cone_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Low"
        app:layout_constraintStart_toEndOf="@+id/mid_cone_cb"
        app:layout_constraintTop_toTopOf="@+id/mid_cone_cb" />

    <EditText
        android:id="@+id/coneInput_et"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Cones"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/high_cone_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="High"
        app:layout_constraintStart_toEndOf="@+id/coneInput_et"
        app:layout_constraintTop_toTopOf="@+id/coneInput_et" />

    <CheckBox
        android:id="@+id/high_cube_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="High"
        app:layout_constraintStart_toEndOf="@+id/cubeInput_update_et"
        app:layout_constraintTop_toTopOf="@+id/cubeInput_update_et" />

    <CheckBox
        android:id="@+id/mid_cube_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Mid"
        app:layout_constraintStart_toEndOf="@+id/high_cube_cb"
        app:layout_constraintTop_toTopOf="@+id/high_cube_cb" />

    <Button
        android:id="@+id/addData_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Cones"
        app:layout_constraintBottom_toBottomOf="@+id/coneInput_et"
        app:layout_constraintEnd_toStartOf="@+id/coneInput_et"
        app:layout_constraintTop_toTopOf="@+id/coneInput_et" />

    <TextView
        android:id="@+id/cube_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Cubes"
        app:layout_constraintBottom_toBottomOf="@+id/cubeInput_update_et"
        app:layout_constraintEnd_toStartOf="@+id/cubeInput_update_et"
        app:layout_constraintTop_toTopOf="@+id/cubeInput_update_et" />

</androidx.constraintlayout.widget.ConstraintLayout>