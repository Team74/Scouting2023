<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">

    <EditText
        android:id="@+id/passwordInput_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Password plz"
        app:layout_constraintEnd_toEndOf="@+id/passwordInput_et"
        app:layout_constraintStart_toStartOf="@+id/passwordInput_et"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput_et" />

    <Button
        android:id="@+id/checkPassword_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Enter Admin Page"
        app:layout_constraintEnd_toEndOf="@+id/passwordInput_et"
        app:layout_constraintStart_toStartOf="@+id/passwordInput_et"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/gullitine"
        android:layout_width="285dp"
        android:layout_height="289dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passwordInput_et"
        app:layout_constraintTop_toTopOf="@+id/passwordInput_et"
        app:srcCompat="@drawable/scouting_app_guilotine" />
</androidx.constraintlayout.widget.ConstraintLayout>